<%
=begin%>
 <div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="border p-5 bg-white shadow-sm rounded" style="width: 650px; height: 550px">
    <h2 class="text-center mb-4 fw-bold">Login</h2>

    <%= form_with(scope: :sessions, url: login_path, local: true) do |f| %>
