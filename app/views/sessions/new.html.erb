        <%= f.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>

    <hr>

    <div class="text-center">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-decoration-none text-primary" %>
    </div>
  </div>
</div>
<%
=end%>


<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(scope: :sessions, url: login_path,  class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
         <p>  <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your Email Address" %>
          </div>
        </div>
       </p>
        <p>
         <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
       </p>

        <div class="form-group row justify-content-center" >
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
